<%= image_tag("backoffice.jpg", :alt => "backoffice", :class => "imagem") %>
<%= render 'layouts/backofficeBar'%>

<div class="folder_fixed">
		<table class="tabela">
		<thead class="head">
		<tr class="tr">
			<th>Nome</th>
			<th class="p-0">Número de Refeições</th>
			<th class="p-0">Cadastrada em</th>
			<th colspan="3"></th>
</tr>
        </thead>
				          <% @categories.each do |category| %>
        <tbody>

              <td><%= link_to category.name, category_path(category),class: "normal gray" %></td>
              <td><%=%></td>
              <td><div class="gray"><%= category.created_at.strftime("%d/%m/%Y") %></div></td>
              <td><%= button_to 'Editar', edit_category_path(category), method: 'get',class: "Edit"%></td>
              <td><%= button_to 'Excluir', category_path(category), method: 'delete', data: { confirm: 'Deseja Mesmo Excluir ?' },class: "Del"%></td>

        </tbody>
<% end %>
	</div>

					<div class="pad8">
        <%= link_to "nova categoria de refeição", new_category_path ,class:"btn btn-success col-md-2 btn-block"%>
				</div>
