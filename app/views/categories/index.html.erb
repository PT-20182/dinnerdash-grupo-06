<table>
<thead>
  <tr>
    <th>Name</th>
    <th>Cadastrada em</th>
    <th colspan="2"></th>
  </tr>
</thead>
<tbody>
  <% @categories.each do |category| %>
    <tr>
      <td><%= link_to category.name, category_path(category) %></td>
      <td><%= category.created_at.strftime("%d/%m/%Y") %></td>
      <td><%= button_to 'Edit', edit_category_path(category), method: 'get'%></td>
      <td><%= button_to 'Remove', category_path(category), method: 'delete', data: { confirm: 'Are you sure?' } %></td>
  <% end %>
</tbody>
</table>
<%= link_to "Add a New Category", new_category_path %>