
<div class="folder mb-5">
  <div class="col mb-5">
  <h3 class="padleft">Editar categoria de refeição</h3>
  <div  align="center">
  <div class="linhaback"></div>
</div>
<div class="pad9">
      <%= form_with model: @category do |form| %>

      <div class="form-inline">
        <div style="width: 50%;">
        <p>Nome</p>
        <div class="form-group" style="width: 100%;">
          <%= form.text_field :name, autofocus: true, placeholder: "name",class: "form-control mr-4", style:"width: 100%;"%>
        </div>
      </div>
        <div style="width: 50%;">
          <p>Cadastrado em</p>
          <input class="form-control disabled" style="width: 100%;"placeholder="<%=@category.created_at.strftime("%d/%m/%Y") %>" disabled ></input>
        </div>
    </div>
    </div>
  </div>
      <% end %>
      <div class="pad9">
        <br>
        <div class="row">
          <div class="col" >
        <%= link_to "atualizar categoria de refeição", categories_path ,class:"btn btn-success col-md-3  mr-3 p-2"%>
        <%= link_to "voltar", categories_path,class:"btn btn-secondary px-5 py-2"%>
      </div>
    </div>
</div>
</div>
</div>
