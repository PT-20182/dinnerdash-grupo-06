<h1>meals for sale</h1>

<% @meals.each do |meal| %>
	<div class="well">
		<div class="row">
			<div class="col-sm-8">
				<h3><%= meal.name %></h3>
			</div>
			<div class="col-sm-4">
				<div class="pull-right">
				<%= form_for(@order_item, remote: true) do |f| %>
					<%= f.hidden_field :meal_id, value: meal.id %>
					<h5><%= meal.price %></h5>
					<div class="form-group">
						<%= f.text_field :quantity, value: 1, min: 1, class: 'form-control' %>
					</div>
					<%= f.submit "Add to cart", class: 'btn btn-primary btn-sm' %>
				<% end %>
				</div>
			</div>
		</div>
	</div>
<% end %>


