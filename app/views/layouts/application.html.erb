<!DOCTYPE html>
<html>
  <head>
    <title>Dinnerdash</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= favicon_link_tag 'Logo CJR.png' %>
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <% if current_page?(new_user_registration_path) || (action_name == 'create' && controller_name == 'registrations') || controller_name == 'sessions' %>
    <% else %>
      <%= render "layouts/header" %>
    <% end %>

    <% if controller_name == 'categories' || controller_name == 'meals' || controller_name == 'backoffice_user' %>
      <%= render "layouts/backofficeBar" %>
    <% end %>

    <% if notice %>
      <div class="alert alert-success alert-dismissible fade show" role="alert">
       <strong><%= notice %></strong>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
      </div>
    <% end %>
    <% if alert && controller_name != 'sessions'%>
      <div class="alert alert-danger alert-dismissible fade show" role="alert">
       <strong><%= alert %></strong>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
      </div>
    <% end %>

    <%= yield %>

    <% if current_page?(new_user_registration_path) || (action_name == 'create' && controller_name == 'registrations') || controller_name == 'sessions' %>
    <% else %>
      <%= render "layouts/footer" %>
    <% end %>
    
  </body>
</html>
